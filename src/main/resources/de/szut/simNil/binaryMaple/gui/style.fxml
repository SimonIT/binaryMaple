<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
      fx:controller="de.szut.simNil.binaryMaple.gui.Controller">
    <fx:define>
        <ToggleGroup fx:id="treeType"/>
    </fx:define>
    <MenuBar>
        <Menu text="File">
            <MenuItem text="Load Tree" onAction="#loadTree"/>
            <MenuItem text="Save Tree as" onAction="#saveTree"/>
            <MenuItem text="Save Image as" onAction="#saveImage"/>
        </Menu>
    </MenuBar>
    <HBox VBox.vgrow="ALWAYS">
        <VBox minWidth="200.0" spacing="10.0">
            <RadioButton toggleGroup="$treeType" selected="true" text="Standard-Baum"
                         onAction="#convertToStandardTree"/>
            <RadioButton toggleGroup="$treeType" text="Rot-Schwarz-Baum" onAction="#convertToRedBlackTree"/>
            <Separator prefWidth="200.0"/>
            <CheckBox text="Terminal-Knoten anzeigen" onAction="#showNullNodes" fx:id="showNullCheckBox"/>
            <CheckBox mnemonicParsing="false" text="Blätter grün anzeigen"/>
            <Separator prefWidth="200.0"/>
            <TextField fx:id="valueField"/>
            <Button maxWidth="1.7976931348623157E308" text="Hinzufügen" onAction="#addValue"/>
            <Button maxWidth="1.7976931348623157E308" text="Löschen" onAction="#delValue"/>
            <Button maxWidth="1.7976931348623157E308" text="Suchen" onAction="#searchValue"/>
            <Button maxWidth="1.7976931348623157E308" text="Ein-/Ausklappen" onAction="#collapseAtValue"/>
            <Button maxWidth="1.7976931348623157E308" text="Zufall" onAction="#generateValueTimes"/>
            <HBox.margin>
                <Insets/>
            </HBox.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>

        <ScrollPane HBox.hgrow="ALWAYS">
            <ImageView fx:id="graphvizImageView">

            </ImageView>
            <HBox.margin>
                <Insets/>
            </HBox.margin>
        </ScrollPane>
    </HBox>
</VBox>
